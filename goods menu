    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <!-- Gian hàng -->
    <table border="1">
        <tr>
            <td>iPhone9</td>
            <td>$2700</td>
            <td><button type="button" onclick="them(this)">Thêm</button></td>
        </tr>
    </table>
    <table border="1">
        <tr>
            <td>iPhone8</td>
            <td>$2100</td>
            <td><button type="button" onclick="them(this)">Thêm</button></td>
        </tr>
    </table>
    <table border="1">
        <tr>
            <td>iPhone7</td>
            <td>$1900</td>
            <td><button type="button" onclick="them(this)">Thêm</button></td>
        </tr>
    </table>

    <!-- Giỏ hàng -->
    <h3>Giỏ hàng của bạn</h3>
    <table border="1" id="cart"></table>
    <h3>Tổng số tiền: $<span id="tong">0</span></h3>

    <!-- javascript -->
    <script>

        //tong()
        function tong() {
            var cart = document.getElementById('cart');
            var rows = cart.getElementsByTagName('tr');
            var tong = 0;
            for (var i = 0; i< rows.length; i++) {
                var cells = rows[i].getElementsByTagName('td');
                var price = Number(cells[1].innerText.substr(1));
                tong += price;
            }
            document.getElementById('tong').innerText = tong;
            
        }

        //them()
        function them(button) {
            var row = button.parentElement.parentElement.cloneNode(true);
            var btnXoa = row.getElementsByTagName('button')[0];
            btnXoa.innerText = 'Xóa';
            btnXoa.setAttribute('onclick','xoa(this)');
            document.getElementById("cart").appendChild(row);
            tong();
        }

        //xoa(this)
        function xoa(button) {
            var row = button.parentElement.parentElement;
            document.getElementById('cart').removeChild(row);
            tong();
        }

        
    </script>

</body>
</html>
